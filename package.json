    "react-redux": "5.1.0",
    "redux": "4.0.1",
    "redux-logger": "3.0.6",
    "redux-thunk": "2.3.0",
    "source-map-loader": "^0.2.4",
    "stylelint": "9.7.1",
    "stylelint-config-recommended": "2.1.0",
