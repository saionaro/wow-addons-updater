    "@babel/preset-react": "7.0.0",
    "awesome-typescript-loader": "^5.2.1",
    "babel-eslint": "10.0.1",
    "babel-loader": "8.0.4",
    "classnames": "2.2.6",
    "clean-webpack-plugin": "0.1.19",
    "copy-webpack-plugin": "4.6.0",
    "cross-env": "5.2.0",
    "css-loader": "1.0.1",
    "electron": "3.0.7",
    "electron-packager": "12.2.0",
    "eslint": "5.8.0",
    "eslint-loader": "2.1.1",
    "eslint-plugin-import": "2.14.0",
