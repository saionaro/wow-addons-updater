{
  "name": "addons-updater",
  "productName": "WOW Addons Updater",
  "version": "0.0.1",
  "main": "./src/electron-main/main.js",
  "scripts": {
    "start": "yarn run lint && yarn run build-dev && yarn run launch",
    "launch": "cross-env NODE_ENV=development electron .",
    "build-package": "yarn run build && electron-packager . --out=builds --overwrite",
    "build-dev": "cross-env NODE_ENV=development webpack",
    "build": "cross-env NODE_ENV=production webpack",
    "lint": "yarn run lint:js && yarn run lint:css",
    "lint:js": "eslint ./src",
    "lint:css": "stylelint ./src"
  },
  "author": "Saionaro",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "classnames": "^2.2.6",
    "clean-webpack-plugin": "^0.1.19",
    "copy-webpack-plugin": "^4.5.2",
    "cross-env": "^5.2.0",
    "css-loader": "^0.28.11",
    "electron": "^2.0.2",
    "electron-packager": "^12.1.0",
    "eslint": "5.0.1",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-react": "^7.9.1",
    "less": "^3.0.4",
    "less-loader": "^4.1.0",
    "mini-css-extract-plugin": "^0.4.0",
    "postcss-jsx": "^0.30.0",
    "postcss-loader": "^2.1.5",
    "postcss-syntax": "^0.30.0",
    "prop-types": "^15.6.2",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-redux": "^5.0.7",
    "redux": "^4.0.0",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.3.0",
    "stylelint": "^9.3.0",
    "stylelint-config-recommended": "^2.1.0",
    "webpack": "^4.12.0",
    "webpack-cli": "^3.0.8"
  },
  "dependencies": {
    "adm-zip": "^0.4.11",
    "request": "^2.87.0"
  }
}
